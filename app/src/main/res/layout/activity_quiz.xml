<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e4c3e2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="660dp"
        android:text="Pytanie 1: Moje ulubione zwierze" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="550dp">

        <RadioButton
            android:id="@+id/radioButtonDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pies" />

        <RadioButton
            android:id="@+id/radioButtonCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kot" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonCheckAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="496dp"
        android:text="Sprawdź odpowiedź"
        android:onClick="checkAnswer1"/>

    <TextView
        android:id="@+id/textViewResult1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="474dp"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="450dp"
        android:text="Pytanie 2: Moja pasja" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="340dp">

        <RadioButton
            android:id="@+id/radioButtonSzydełkowanie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Szydełkowanie" />

        <RadioButton
            android:id="@+id/radioButtonGotowanie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gotowanie" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonCheckAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="290dp"
        android:text="Sprawdź odpowiedź"
        android:onClick="checkAnswer2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="270dp"
        android:id="@+id/textViewResult2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="250dp"
        android:text="Pytanie 3: Co robie w wolnym czasie" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp">

        <RadioButton
            android:id="@+id/radioButtonZnaczki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kolekcjonuje znaczki" />

        <RadioButton
            android:id="@+id/radioButtonGram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gram" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonCheckAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="100dp"
        android:text="Sprawdź odpowiedź"
        android:onClick="checkAnswer3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/textViewResult3" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop='610dp'
        android:layout_margin="15dp"
        android:background="@android:color/holo_purple"
        android:drawableLeft="@android:drawable/ic_media_previous"
        android:onClick="goBack"
        android:text="Back" />

</RelativeLayout>
